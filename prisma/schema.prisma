// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @unique @default(uuid())
  name                 String
  email                String    @unique
  password             String
  tentang_saya         String?
  isVerified           Boolean   @default(false)
  foto_profile         Json?
  no_telp              String?
  reset_password_token String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime?
  iklans               Iklan[]
  favorits             Favorit[]
}

model Iklan {
  id               String    @id @unique @default(uuid())
  User             User?     @relation(fields: [userId], references: [id])
  userId           String?
  Provinsi         Provinsi? @relation(fields: [provinsiId], references: [id])
  provinsiId       String?
  Merk             Merk?     @relation(fields: [merkId], references: [id])
  merkId           String?
  Kategori         Kategori? @relation(fields: [kategoriId], references: [id])
  kategoriId       String?
  judul_iklan      String
  deskripsi        String
  alamat           String
  kategori         String
  merk             String?
  model            String?
  status           String    @default("draft")
  tahun            BigInt?
  jarak_tempuh     BigInt?
  tipe_bahan_bakar String?
  kapasitas_mesin  BigInt?
  l_bangunan       BigInt?
  l_tanah          BigInt?
  kamar_tidur      Int?
  lantai           Int?
  fasilitas        String?
  sertifikasi      String?
  harga            BigInt
  foto             Json
  dilihat          BigInt    @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime?
  Favorit          Favorit[]
}

model Favorit {
  id      String  @id @unique @default(uuid())
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
  iklan   Iklan?  @relation(fields: [iklanId], references: [id])
  iklanId String?
}

model Provinsi {
  id    String  @id @unique @default(uuid())
  name  String
  Iklan Iklan[]
}

model Merk {
  id    String  @id @unique @default(uuid())
  name  String
  Iklan Iklan[]
}

model Kategori {
  id    String  @id @unique @default(uuid())
  name  String
  slug  String  @unique
  Iklan Iklan[]
}
